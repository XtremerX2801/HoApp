<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    android:baselineAligned="false">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorNormalText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/payment_product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="2"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/payment_product_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/product_name"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:textSize="12sp"
                android:textColor="@color/colorNormalText"
                android:layout_weight="6" />

            <TextView
                android:id="@+id/payment_product_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Số lượng"
                android:textSize="14sp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:textColor="@color/colorNormalText"
                android:layout_weight="4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/payment_product_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/product_price"
                android:textSize="14sp"
                android:textColor="@color/colorNormalText"
                android:layout_weight="6" />

            <TextView
                android:id="@+id/payment_total_product_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/product_price"
                android:textSize="14sp"
                android:textColor="@color/colorNormalText"
                android:layout_weight="4" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>