<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/notice_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:text="Lưu ý khi chọn phương thức thanh toán"
        android:textSize="22sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/notice_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="1. Thanh toán MoMo chỉ sử dụng khi mua trực tiếp tại cửa hàng, khi quý khách có hàng nhưng chưa thanh toán."
        android:textSize="20sp"
        android:textColor="@color/colorNormalText"
        app:layout_constraintStart_toStartOf="@+id/notice_textview"
        app:layout_constraintEnd_toEndOf="@+id/notice_textview"
        app:layout_constraintTop_toBottomOf="@id/notice_textview"/>

    <TextView
        android:id="@+id/notice_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="2. Khi đặt hàng trước tại một cửa hàng thì quý khách cần đến lấy và thanh toán trực tiếp trong ngày, sau ngày đó đơn hàng sẽ bị hủy bỏ."
        android:textSize="20sp"
        android:textColor="@color/colorNormalText"
        app:layout_constraintStart_toStartOf="@+id/notice_textview"
        app:layout_constraintEnd_toEndOf="@+id/notice_textview"
        app:layout_constraintTop_toBottomOf="@id/notice_1"/>

    <TextView
        android:id="@+id/notice_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:paddingBottom="20dp"
        android:text="3. Khi đặt hàng trực tuyến, quý khách có thể cung cấp vị trí hiện tại thông qua GPS để việc giao hàng diễn ra thuận lợi hơn."
        android:textSize="20sp"
        android:textColor="@color/colorNormalText"
        app:layout_constraintStart_toStartOf="@+id/notice_textview"
        app:layout_constraintEnd_toEndOf="@+id/notice_textview"
        app:layout_constraintTop_toBottomOf="@id/notice_2"/>

</androidx.constraintlayout.widget.ConstraintLayout>