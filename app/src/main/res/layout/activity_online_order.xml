<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.User.Payment.OnlineOrderActivity">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_arrow_back_24dp"
        app:tint="@color/colorNormalText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/aoo_txt1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Nơi nhận hàng"
        android:textColor="@color/design_default_color_primary_dark"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/aoo_address"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Địa chỉ"
        android:textColor="@color/colorNormalText"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aoo_txt1"/>

    <TextView
        android:id="@+id/aoo_txt2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Địa chỉ nhận hàng mặc định là địa chỉ trong hồ sơ, nhấn nút bên dưới để đổi địa chỉ nhận hàng"
        android:textColor="@color/colorNormalText"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aoo_address"/>

    <Button
        android:id="@+id/btn_change_address"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="ĐỔI ĐỊA CHỈ"
        android:textColor="@color/colorNormalText"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aoo_txt2"/>

    <TextView
        android:id="@+id/aoo_txt3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Phương thức thanh toán"
        android:textColor="@color/design_default_color_primary_dark"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_change_address"/>

    <Button
        android:id="@+id/btn_pay_MoMo"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Thanh toán bằng MoMo"
        android:textColor="@color/colorNormalText"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:background="@color/colorThemePink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aoo_txt3"/>

    <Button
        android:id="@+id/btn_pay_home"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Thanh toán khi nhận hàng"
        android:textColor="@color/colorNormalText"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:background="@color/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pay_MoMo"/>

</androidx.constraintlayout.widget.ConstraintLayout>